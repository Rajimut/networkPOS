header
  font-family 'Quicksand'
  font-size 45px
  padding 30px 10px
  color #fff
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 50%)
  text-shadow 0px -1px 0px darken(main-color, 50%)



.main-content
  float left
  width 300px
  p
    margin-bottom 20px

.holder
  margin 0px 20px
  margin-top 20px

.slick-prev::before, .slick-next::before
  color #000

.btn-xl
  padding 18px 28px
  font-size 22px
  border-radius 8px
.modal-backdrop
  z-index 0

.widget

  /*
   * Note the lack of vendor
   * prefixes here. Nib will
   * add them for us
   */
  
  border-radius 3px
  border 1px solid #ccc
  padding 0px 20px
  background-color background-color
  box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

  p
    font-size 13px
    padding 0px 10px
    margin-bottom 10px

p
  line-height 1.8
*
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

body
  font-family sans-serif

.button
  display inline-block
  padding 0.5em 1.0em
  background #EEE
  border none
  border-radius 7px
  background-image linear-gradient( to bottom, hsla(0, 0%, 0%, 0), hsla(0, 0%, 0%, 0.2) )
  color #222
  font-family sans-serif
  font-size 16px
  text-shadow 0 1px white
  cursor pointer
  &:hover
    background-color #8CF
    text-shadow 0 1px hsla(0, 0%, 100%, 0.5)
    color #222
  &.is-checked
    color white
    text-shadow 0 -1px hsla(0, 0%, 0%, 0.8)
  &:active
    box-shadow inset 0 1px 10px hsla(0, 0%, 0%, 0.8)

.button:active,
.button.is-checked
  background-color #28F

.button-group
  &:after
    content ''
    display block
    clear both
  .button
    float left
    border-radius 0
    margin-left 0
    margin-right 1px
    &:first-child
      border-radius 0.5em 0 0 0.5em
    &:last-child
      border-radius 0 0.5em 0.5em 0

.isotope
  border 1px solid #333
  max-width 1200px
  &:after
    content ''
    display block
    clear both

.element-item
  position relative
  float left
  width 150px
  height 150px
  margin 10px
  padding 10px
  background #f5f5f5
  color #262524
  & > *
    margin 0
    padding 0
  .symbol
    position absolute
    left 15px
    top 90px
    text-transform none
    letter-spacing 0
    font-size 12px
    font-weight normal
  .price 
    position absolute
    right 10px
    top 0px
    font-size 22px
    font-weight normal
    color black
  .name, .priceDecending
    position absolute
    right 12px
    top 7px
  .date
    position absolute
    left 35px
    top 120px
    font-size 14px
  &.alkali
    background #F00
    background hsl(   0, 100%, 50%)
  &.alkaline-earth
    background #F80
    background hsl(  36, 100%, 50%)
  &.lanthanoid
    background #FF0
    background hsl(  72, 100%, 50%)
  &.actinoid
    background #0F0
    background hsl( 108, 100%, 50%)
  &.transition
    background #0F8
    background hsl( 144, 100%, 50%)
  &.post-transition
    background #0FF
    background hsl( 180, 100%, 50%)
  &.metalloid
    background #08F
    background hsl( 216, 100%, 50%)
  &.diatomic
    background #00F
    background hsl( 252, 100%, 50%)
  &.halogen
    background #F0F
    background hsl( 288, 100%, 50%)
  &.noble-gas
    background #F08
    background hsl( 324, 100%, 50%)

  

