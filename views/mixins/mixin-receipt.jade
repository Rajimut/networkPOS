.well
 .text-center
     h3 My last Receipt
 .row
   .col-xs-6.col-sm-6.col-md-6
     address
       strong #{receipt.paymenttype}
       |                         
       br
       |2135 Sunset Blvd
       br
       | Los Angeles, CA 90026
       |                         
       br
       |                         
       abbr(title='Phone') P:
       |  (213) 484-6829
   |                 
   .col-xs-6.col-sm-6.col-md-6.text-right
     p
       em Date: #{moment(receipt.transaction_date).format('MMM Do YY')}
     |                     
     p
       em Receipt #: #{receipt.transaction_id}
 |             
 .row
   .text-center
     h1 Receipt
   |                 
   |                 
   table.table.table-hover
     thead
       tr
         th Product
         |                             
         th Quantity
         |                             
         th.text-center Price
         |                             
         th.text-center Total
     |                     
     tbody
      each item_detail in receipt.item_details
        tr
          td.col-md-9
           em #{item_detail.itemname}
          |                             
          td.col-md-1(style='text-align: center')  #{item_detail.quantity}
          |                             
          td.col-md-1.text-center  #{_.str.numberFormat(item_detail.unitprice, 2)}
          |                             
          td.col-md-1.text-center  #{_.str.numberFormat(item_detail.subtotal_ln, 2)}
      tr                          
        td(colspan=2).col-md-9.text-right
          strong Subtotal:       
        td(colspan=2).col-md-3.text-right
          em $ #{_.str.numberFormat(receipt.beforetax, 2)}
      tr                          
        td(colspan=2).col-md-9.text-right
          strong Tax:       
        td(colspan=2).col-md-3.text-right
          em $ #{_.str.numberFormat(receipt.tax, 2)}                       
      tr
        td(colspan=2).col-md-9.text-right
          strong Total:       
        td(colspan=2).col-md-3.text-right
          strong $ #{_.str.numberFormat(receipt.aftertax, 2)} USD       
             
   

