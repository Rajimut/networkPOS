doctype html 
html(data-ng-app="HelloWorld")
head
  script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js')
  script(src='https://code.angularjs.org/1.2.3/angular-route.min.js')
body
  div
    p AngularJs:
    div(data-ng-view="") 
    
  script.
    var HelloWorld; 
    HelloWorld = angular.module('HelloWorld', ['ngRoute']); 
    HelloWorld.config(function($routeProvider) {
      $routeProvider
        .when('/',
          {
          controller: 'SimpleController',
          templateUrl: '/View1.html'
          })
        .when('/View2',
          {
          controller: 'SimpleController',
          templateUrl: '/View2.html'
          })
        .otherwise({ redirectTo: 'View1'});    
        }); 
    HelloWorld.controller('SimpleController', function SimpleController($scope) {  
      $scope.customers = [ { name: 'Jon Smith', city: 'Phoenix' }, { name: 'Jack Wahlin', city:'San Fancisco' }, { name: 'Jill Doe', city:'Las Vegas' }, { name: 'James', city:'LA' }  ]; 
      });